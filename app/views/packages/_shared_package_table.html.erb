<p>
  view
  <%= link_to '10', {:name => params[:name], :per_page => 10} %>
  <%= link_to '20', {:name => params[:name], :per_page => 20} %>
  <%= link_to '60', {:name => params[:name], :per_page => 60} %>
  per page
</p>
<p>
  <%= record_count(branches) %>
</p>
<%= will_paginate branches %>
<% if branches.present? %>
  <table class="zebra">
  <thead>
    <tr>
      <th><!-- Icon --></th>
      <th>Display Name<br/><em>Branch</em></th>
      <th>Unit</th>
      <th><%= check_box_tag("selected_all", nil, false, :class => "select_all") %></th>
      <th>Version</th>
      <th>Update For</th>
      <th>Requires</th>
      <th>Status</th>
    </tr>
  </thead>
    <% branches.each do |branch| %>
      <%= render :partial => 'shared_package_table_row', :locals => {:branch => branch} %>
    <% end %>
  </table>
<% else %>
  <p><em>There are no shared packages from this unit.</em></p>
<% end %>
<%= will_paginate branches %>
